@model IEnumerable<PPP___ProjekatPokusaj2.Core.KorisnickiNalogBO>

    @{
        ViewData["Title"] = "Lista Korisnika";
    }

   
<style>
    .kontejnercic{
       display:flex;
         
    }
    .edit{
        border-right: solid grey;
        border-width: 1px;
        column:1;
        flex-basis:50%

    }
    .delete{
        column:2;
        flex-basis:50%
    }
</style>


<h3>@ViewData["Title"]</h3>
<hr/>
<form>
<button asp-action="CreateOrEdit" asp-controller="KorisnickiNalog" class="btn btn-primary mb-3">Create Nalog</button> 
<table class="table table-responsive table-bordered table-hover text-center">
    <thead>
        <tr class="table-active">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prezime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.Sifra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kontakt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aktivnost)
            </th>
            <th colspan=2>
                Opcije
            </th>
            
        </tr>
    </thead>
    <tbody>
        @if(Model != null & Model.Any())
        {
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Ime</td>
                    <td>@item.Prezime</td>
                    <td>@item.Username</td>
                    <td>@item.Sifra.ToString().GetHashCode().ToString("X")</td>
                    <td>@item.Kontakt</td>
                    <td>@item.Aktivnost</td>
                    <td class="text-center">
                        <div class="kontejnercic">
                            <div class="edit">
                                <div class="btn-group btn-group-sm">
                            <a asp-controller="KorisnickiNalog" asp-action="CreateOrEdit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        </div>
                            </div>
                            <div class="delete">
                                 <div class="btn-group btn-group-sm">
                            <a asp-controller="KorisnickiNalog" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </div>
                            </div>
                        </div>
                        
                       
                    </td>

                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9">
                    <div>
                        Nema Ulica Unesenih
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</form>