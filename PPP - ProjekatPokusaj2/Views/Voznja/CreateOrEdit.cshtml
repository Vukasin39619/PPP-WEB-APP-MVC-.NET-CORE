@model PPP___ProjekatPokusaj2.Core.VoznjaBO


@{
    ViewData["Title"] = Model != null && Model.Id_voznje == 0 ? "Create voznju" : "Edit voznju";
}

<form method="post" action="CreateOrEdit">
    <div class="card">
        <div class="card-header bg-info align-content-center">
            <h2 class="text-center">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="Id_voznje" />
            <div class="form-floating mb-2">
                <input asp-for="Id_ulice" class="form-control" />
                <label asp-for="Id_ulice"></label>
                <span asp-validation-for="Id_ulice" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Id" class="form-control" />
                <label asp-for="Id"></label>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="VremeVoznjeMin" class="form-control" />
                <label asp-for="VremeVoznjeMin"></label>
                <span asp-validation-for="VremeVoznjeMin" class="text-danger"></span>
            </div>
        </div>
        @if(Model != null && Model.Id_voznje==0)
        {
            <div class="col-lg-12 d-grid">
            <button type="submit" class="btn btn-primary">Create</button>
            </div>
        }
        else
        {
            <div class="col-lg-12 d-grid">
            <button type="submit" class="btn btn-success">Edit</button>
            </div>
        }
    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
