<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PPP___ProjekatPokusaj2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PPP___ProjekatPokusaj2.styles.css" asp-append-version="true" />
    <style>
        .footercs {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            text-align: center;
        }

        .navbar-nav-right {
            margin-right: 15px;
        }

        .navbar-nav-right .nav-link {
            padding-left: 10px;
            padding-right: 10px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="pics/download.png" height="30" alt="MDB Logo" loading="lazy" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated && User.Identity.Name == "admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="KorisnickiNalog" asp-action="Index">Korisnicki Nalog</a>
                            </li>
                            
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Ulice" asp-action="Index">Ulice</a>
                            </li>
                        }
                        
                    
                    @if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Voznja" asp-action="Index">Voznje</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Poruka" asp-action="Index">Napisi Poruku</a>
    </li>
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <span class="navbar-text text-dark">
                Dobrodošli, @User.Identity.Name
            </span>
        </li>
        <li class="nav-item">
            <form id="logoutForm" asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    <i class="fas fa-sign-out-alt"></i> Odjava
                </button>
            </form>
        </li>
    </ul>
}

    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["successMessage"] != null)
            {
                <div class="alert alert-success">
                    <b>Success : </b>@TempData["successMessage"]
                    <button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["errorMessage"] != null)
            {
                <div class="alert alert-danger">
                    <b>Error : </b>@TempData["errorMessage"]
                    <button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted footercs">
        <div class="container">
            &copy; 2023 - Taksi Sluzba - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/Custom.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
