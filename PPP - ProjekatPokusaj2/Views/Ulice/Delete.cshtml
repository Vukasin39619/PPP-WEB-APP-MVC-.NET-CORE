@model PPP___ProjekatPokusaj2.Core.UlicaBO

    @{
        ViewData["Title"] = "Obrisi Ulicu";
    }

    <form method="post" action="Delete">
        <div class="card">
            <div class="card-header bg-info">
                <h2 class="text-center">@ViewData["Title"]</h2>
            </div>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="Id_ulice" />
            <div class="form-floating mb-2">
                <input asp-for="Nazivulice" class="form-control" readonly />
                <label asp-for="Nazivulice"></label>
                <span asp-validation-for="Nazivulice" class="text-danger"></span>
            </div>
            <div>
                <div class="col-lg-12 d-grid">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </div>
</div>
</form>